<% meta_keywords "joystagram, joystagram.com, instagram, IG, web, PC, Computer, viewer, instagram on web" %>
<% meta_description "Joystagram - Instagram Web Viewer where you can like and comment." %>
<h1><%=h content_for(:title, "Joystagram - Instagram Web Viewer") %></h1>
<div class="grid_12 omega">
  <div class="popular-text">Popular on Instagram</div>
</div>
<div align="center">
<i class="popular-refresh foundicongen-refresh" id="refresh-feed"></i></div>
<div id="image-loader" align="center" style="display: none;"><img src="/assets/ajax-loader.gif" /></div>
<div id="disp">
  <%= render 'content' %>
</div>
<script type="text/javascript">
  $(document).ready(function(){
    $("#refresh-feed").click(function(){
      $("#image-loader").show();
      $("#disp").addClass("opaque");
      $.ajax({
        url: "/",
        success: function(response) {
          $("#image-loader").hide();
          $("#disp").removeClass("opaque");
          $("#disp").html(response);
          var dataLength = <%= @data["data"].length %>
          for (var i = 0; i < dataLength; i++) {
            var content = $('#someHtml_'+i).html();
            $(".fancybox_"+i).fancybox({
              'content': content,
              'maxHeight' : 1800
            });
          };
        }
      });
    });
  });

</script>