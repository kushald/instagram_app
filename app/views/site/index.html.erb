<h1><%=h content_for(:title, "Joystagram - Instagram Web Viewer") %></h1>
<div class="grid_12 omega">
  <div class="popular-text">Popular on Instagram</div>
</div>
<button id="refresh-button">refresh</button>
<div id="image-loader" style="display: none;"><img src="/assets/ajax-loader.gif" /></div>
<%= render 'content' %>
<%= render 'layouts/ga_tracking' %>
<script type="text/javascript">
  $(document).ready(function(){
    $("#refresh-button").click(function(){
      $("#image-loader").show();
      $.ajax({
        url: "/",
        success: function(response) {
          $("#image-loader").hide();
          $("#disp").html(response);
          var dataLength = <%= @data["data"].length %>
          for (var i = 0; i < dataLength; i++) {
            var content = $('#someHtml_'+i).html();
            $(".fancybox_"+i).fancybox({
              'content': content,
              'maxHeight' : 1800
            });
          };
        }
      });
    });
  });

</script>