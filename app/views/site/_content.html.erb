<%  resolution = session[:mobile] ? "low_resolution" : "standard_resolution" %>
<div class="row">
  <% color = tag_color %>
  <% @data["data"].each_with_index do |data,i| %>
    <div class="large-3 columns" style="padding:5px;">
      <% if data["type"] == "video" %>
        <a href="/media/<%= data["id"] %>"><div class="arrow-right"></div></a>
      <% end %>
      <a href="/media/<%= data["id"] %>"><img src="<%= data["images"]["low_resolution"]["url"] %>" style="box-shadow: 0px 1px 3px black;margin:-2px;border-radius:0px;"></a>
      <div class="caption-count" style="background:<%= color %>">
        <div class="bar-font">
          <a href="/comments/<%= data["id"] %>"><%= data["comments"]["count"]  %> Comments</a> 
          <a href="/likes/<%= data["id"] %>"><%= data["likes"]["count"] %> Likes<a>
        </div>
      </div>
    </div>
    <div style="display:none;">
      <% data["comments"]["data"][0..3].each do |comment| %>
      <div style="border-bottom: 1px solid;">
      <%if @current_user.present? && !@current_user.guest_user %>
      <a href="/u/<%= comment["from"]["username"] %>"><br/></a>
      <% else %>
      <img src="<%= comment["from"]["profile_picture"] %>" style="width: 9%;"><br/>
      <% end %>
      <%= comment["from"]["username"] %>
      <p style="max-width: 35%;float:right; margin: -4% 46% 0% 0"><%= comment["text"] %></p>
      </div>
      <% end %>
    </div>
  <% end %>
  <div class="large-3 columns" style=" border: 1px solid #DDD; box-shadow: 1px 1px 9px #DDD; ">
    <script type="text/javascript">
      ch_client = "kushz19";
      ch_width = 300;
      ch_height = 250;
      ch_type = "mpu";
      ch_query = "<%= params[:id] %>";
      ch_sid = ch_query;
      ch_color_site_link = "FFFFFF";
      ch_color_title = "FFFFFF";
      ch_color_border = "202020";
      ch_color_text = "FFFFFF";
      ch_color_bg = "202020";
    </script>
    <script src="http://scripts.chitika.net/eminimalls/amm.js" type="text/javascript">
    </script>
  </div>
</div>
