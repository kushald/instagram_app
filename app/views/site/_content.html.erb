<% @data["data"].each_with_index do |data,i| %>
  <div class="grid_6 omega">
    <div class="image-contain">
      <a href="/media/<%= data["id"] %>">
        <% if data["type"] == "video" %>
          <video width="97%" controls>
            <source src="<%= data["videos"]["standard_resolution"]["url"] %>" type="video/mp4">
          </video>
        <% else %>
          <img src="<%= data["images"]["standard_resolution"]["url"] %>" style="width:97%" >
        <% end %>
      </a>
    </div>
    <% if data["type"] == "image" %>
      <div class="des-bar">
        <% if @current_user.present? && !@current_user.guest_user %>
          <% if data['user_has_liked'] %>
            <div class="foundicongen-heart red"></div>
          <% else %>
            <i class="foundicongen-heart white" id="<%= data['id'] %>" data-pos="<%= i %>" data-likes="<%= data["likes"]["count"] %>"></i>
          <% end %>    
        <% end %>
        <div class="bar-font" id="bar-font-<%= data['id'] %>" like-count="<%= data["likes"]["count"] %>"><%= data["comments"]["count"]  %> Comments <span><%= data["likes"]["count"] %></span> Likes</div>
      </div>
    <% end %>
    <div id="someHtml_<%= i %>" style="display:none;">
      <img class="ri" src="<%= data["images"]["standard_resolution"]["url"] %>" >
      <!-- <%#= data["caption"]["text"].force_encoding("UTF-8") rescue "" %> -->
      <div style="background-color: #1E8E77;color: white;border: 2px solid;border-radius: 3px;box-shadow: 0 3px 6px rgba(0,0,0,0.9);font-weight: bold;">
        <% if data["caption"].present? %>
          <div>
            <img src="<%= data["caption"]["from"]["profile_picture"] rescue '' %>" style="width: 15%;border-radius: 66%;margin-left: 44%;" >
            <div style="text-align:center;"><%= data["caption"]["from"]["username"] %></div>
          </div>
        <% end %>

        <div style="text-align:center;"><%= data["comments"]["count"]  %>Comments <%= data["likes"]["count"] %> Likes</div>
       </div>
       <div>
        <div>
          <% data["comments"]["data"][0..3].each do |comment| %>
            <div style="border-bottom: 1px solid;">
              <%if @current_user.present? && !@current_user.guest_user %>
                <a href="/u/<%= comment["from"]["username"] %>"><img src="<%= comment["from"]["profile_picture"] %>" style="width: 9%;"><br/></a>
                <% else %>
                  <img src="<%= comment["from"]["profile_picture"] %>" style="width: 9%;"><br/>
                <% end %>
              <%= comment["from"]["username"] %>
              <p style="max-width: 35%;float:right; margin: -4% 46% 0% 0"><%= comment["text"] %></p>
          </div>
            <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $(".white").click(function(){
      var mediaId = this.id;
      likeCount = parseInt($('#'+mediaId).attr('data-likes'))+1;
      $('#'+mediaId).addClass('red');
      $('#'+mediaId).removeClass('white');
      $('#bar-font-'+mediaId+' span').text(likeCount);

      $.ajax({
        url: "/like-media",
        type: 'POST',
        data: {"media_id" : mediaId},
        success: function(response) {
          console.log("phew!!!!");
        }
      });
    });

  });
</script>