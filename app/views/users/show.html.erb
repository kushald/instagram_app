<% un = (@user_info.blank? || @user_info["meta"]["error_type"].present?) ? "" : @user_info["data"]["username"] %>
<% meta_keywords "joystagram, joystagram.com, instagram, IG, web, #{un}, instagram on web" %>
<% meta_description "Joystagram - #{un}" %>
<h1><%=h content_for(:title, "#{un} - Joystagram") %></h1>
<% if session[:mobile] %>
  <%= render "show_mobile" %>
<% else %>
  <%= render "show_web" %>
<% end %>
<%= render "pagination" %>
<script type="text/javascript">
  $(document).ready(function(){
    $("#relation-none").click(function(){
      $(".relation-loader").show();
      $.ajax({
        url: "/relationship",
        type: "POST",
        data: {instagram_action : "follow", media_id : "<%= params[:id] %>" },
        success: function(response) {
          $(".relation-loader").hide();
          $("#relation-none").css({"background-color": "#85A32B"});
          $("#relation-none").text("following");
        }
      });
    });
  });
</script>